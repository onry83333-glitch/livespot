{
  "manifest_version": 3,
  "name": "Strip Live Spot - Stripchat Manager",
  "version": "2.10.0",
  "description": "Stripchat配信管理ツール - チャット監視・DM送信・売上分析",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "alarms",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "*://stripchat.com/*",
    "*://*.stripchat.com/*",
    "https://ujgbhkllfeacbgpdbjto.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://stripchat.com/*", "*://*.stripchat.com/*"],
      "js": ["content_spy.js", "content_whisper.js", "dm_executor.js", "content_stt_relay.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://stripchat.com/*", "*://*.stripchat.com/*"],
      "js": ["content_stt.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
